generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model app_users {
  id               String   @id @db.Uuid
  provider         String
  provider_user_id String
  nickname         String?
  email            String?
  created_at       DateTime @default(now())

  characters characters[]

  @@unique([provider, provider_user_id])
}

model characters {
  id              String   @id @db.Uuid
  user_id         String   @db.Uuid
  server_id       String
  character_name  String
  dnf_character_id String?
  job_name        String?
  level           Int?
  is_main         Boolean? @default(false)
  last_image_url  String?
  last_ai_image_url String?
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  user app_users @relation(fields: [user_id], references: [id])

  @@unique([user_id, server_id, character_name])
}

model battles {
  id                     String   @id @db.Uuid
  challenger_user_id     String?  @db.Uuid
  challenger_character_id String? @db.Uuid
  target_character_id    String?  @db.Uuid
  winner_side            String
  score_challenger       Int?
  score_target           Int?
  log_json               Json?
  created_at             DateTime @default(now())
}